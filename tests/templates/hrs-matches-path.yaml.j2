
---

apiVersion: gateway.networking.k8s.io/v1beta1
kind: HTTPRoute
metadata:
  name: test-match-path
spec:
  parentRefs:
    - name: gateway
      sectionName: http
  hostnames:
    - {{ hostname }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /path-test
      backendRefs:
        - name: test-service
          port: 80
