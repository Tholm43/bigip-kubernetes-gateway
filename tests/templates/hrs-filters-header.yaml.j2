
---

apiVersion: gateway.networking.k8s.io/v1beta1
kind: HTTPRoute
metadata:
  name: test-filter-header
spec:
  parentRefs:
    - name: gateway
      sectionName: http
  hostnames:
    - {{ hostname }}
  rules:
    - filters:
        - type: RequestHeaderModifier
          requestHeaderModifier:
            add:
              - name: test
                value: automation
            set:
              - name: dev
                value: agile
      backendRefs:
        - name: test-service
          port: 80
