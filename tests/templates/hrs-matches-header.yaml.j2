
---

apiVersion: gateway.networking.k8s.io/v1beta1
kind: HTTPRoute
metadata:
  name: test-match-header
spec:
  parentRefs:
    - name: gateway
      sectionName: http
  hostnames:
    - {{ hostname }}
  rules:
    - matches:
        - headers:
            - name: test
              value: automation
      backendRefs:
        - name: test-service
          port: 80
